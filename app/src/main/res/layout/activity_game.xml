<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".game">

    <ImageView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc"
        app:srcCompat="@drawable/grid1" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp" />

    <ImageView
        android:id="@+id/p0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="102dp"
        android:contentDescription="@string/desc"
        android:onClick="p0Input"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/p1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/p0"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/desc"
        android:onClick="p1Input"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/p2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/p0"
        android:layout_marginEnd="17dp"
        android:contentDescription="@string/desc"
        android:onClick="p2Input"
        app:srcCompat="@android:color/background_light" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp" />

    <ImageView
        android:id="@+id/p3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/p0"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc"
        android:onClick="p3Input"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/p4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/desc"
        android:onClick="p4Input"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/p5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/p2"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc"
        android:onClick="p5Input"
        app:srcCompat="@android:color/background_light" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp" />

    <ImageView
        android:id="@+id/p6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/p0"
        android:layout_marginBottom="108dp"
        android:contentDescription="@string/desc"
        android:onClick="p6Input"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/p7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/p6"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/desc"
        android:onClick="p7Input"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/p8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/p2"
        android:layout_alignTop="@+id/p6"
        android:contentDescription="@string/desc"
        android:onClick="p8Input"
        app:srcCompat="@android:color/background_light" />


</RelativeLayout>